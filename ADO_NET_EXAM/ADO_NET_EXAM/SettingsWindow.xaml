        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
            <ListView Margin="10" Name="lvSync" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="100" >

                <ListView.View>

