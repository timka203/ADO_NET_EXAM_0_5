<Window x:Class="ADO_NET_EXAM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_NET_EXAM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnCategory"  Click="btnCategory_Click">Категории ваканский</Button>
        </StackPanel>
        <StackPanel Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Grid.Row="1" x:Name="btnSearck" Click="btnSearck_Click">Поиск вакансий</Button>
        </StackPanel>
        <StackPanel Grid.Row ="2"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Grid.Row ="2" x:Name="btnSettings" Click="btnSettings_Click">Настройки</Button>
        </StackPanel>
    </Grid>
</Window>
